network:
  version: 2
  ethernets:
    {{ lvvm_net_iface }}:
      dhcp4: no
      addresses: [ {{ lvvm_vm_ip_cidr }} ]
      routes:
      - to: 0.0.0.0/0
        via: {{ lvvm_net_gateway }}
      nameservers:
        addresses:
        {% for ns in lvvm_net_nameservers %}
- {{ns}}
        {% endfor %}
search:
        - {{ lvvm_dns_domain}}
