#!ipxe

# Taken directly from: https://docs.fedoraproject.org/en-US/fedora-coreos/bare-metal/

set ignition http://{{bob_listen_address}}/fcos/bootstrap.ign
set bob http://{{bob_listen_address}}/fcos

kernel ${bob}/{{fcos_kernel_file}} initrd=main coreos.live.rootfs_url=${bob}/{{fcos_rootfs_file}} coreos.inst.install_dev={{disk}} coreos.inst.ignition_url=${ignition}
initrd --name main ${bob}/{{fcos_initrd_file}}

boot
